    min-height: 100vh;
  }

  .app {
    background: #fff;
    width: 90%;
    max-width: 420px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    overflow: hidden;
    animation: fadeIn 0.5s ease;
  }

  header {
    background: #004aad;
