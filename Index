<body>
<div class="app">
  <header>Controle de Bulks - Ambev</header>

  <div class="content">
    <!-- Tela Inicial -->
    <div id="tela-inicial">
      <label>Nome do Operador:</label>
      <input id="operador" type="text" placeholder="Digite seu nome">
      <label>Turno:</label>
      <select id="turno">
        <option value="">Selecione...</option>
        <option>Turno A</option>
        <option>Turno B</option>
        <option>Turno C</option>
      </select>
      <button id="iniciar">Iniciar Controle</button>
    </div>

    <!-- Sele√ß√£o -->
    <div id="tela-selecao" class="hidden">
      <h2>Selecione o tipo de Bulk</h2>
      <button id="bulk-stella">Bulk Stella üç∫</button>
      <button id="bulk-spaten">Bulk Spaten üç∫</button>
      <button class="secondary" id="voltar-inicio">Voltar</button>
    </div>

    <!-- Controle -->
    <div id="tela-controle" class="hidden">
      <h2 id="tipo-titulo"></h2>
      <div class="counter" id="contador">0</div>
      <button id="add">+2 Bulks</button>
      <button id="remover" class="secondary">-2 Bulks</button>
      <button id="abrir-resumo" class="secondary">Ver Resumo / PDF</button>
      <button class="secondary" id="voltar">Voltar</button>
    </div>

    <!-- Resumo -->
    <div id="tela-resumo" class="hidden">
      <h2>Resumo por Hora</h2>
      <div id="resumo"></div>
      <button id="gerar-pdf">Gerar PDF</button>
      <button id="limpar-dados" class="secondary">Zerar Dados</button>
      <button class="secondary" id="voltar-selecao">Voltar</button>
    </div>
  </div>
</div>

<script>
window.onload = () => {
  const { jsPDF } = window.jspdf;

  let operador = '';
  let turno = '';
  let tipoAtual = '';
  let contagens = JSON.parse(localStorage.getItem('contagensBulkHora')) || {
    stella: {},
    spaten: {}
  };

  const telas = {
    inicial: document.getElementById('tela-inicial'),
    selecao: document.getElementById('tela-selecao'),
    controle: document.getElementById('tela-controle'),
    resumo: document.getElementById('tela-resumo')
  };
  const contadorEl = document.getElementById('contador');
  const tipoTitulo = document.getElementById('tipo-titulo');
  const resumoEl = document.getElementById('resumo');

  function mostrar(id) {
    Object.values(telas).forEach(t => t.classList.add('hidden'));
    telas[id].classList.remove('hidden');
  }

  document.getElementById('iniciar').onclick = () => {
    operador = document.getElementById('operador').value.trim();
    turno = document.getElementById('turno').value;
    if (!operador || !turno) return alert('Preencha o nome e o turno.');
    mostrar('selecao');
  };

  document.getElementById('bulk-stella').onclick = () => abrirControle('stella');
  document.getElementById('bulk-spaten').onclick = () => abrirControle('spaten');
  document.getElementById('voltar-inicio').onclick = () => mostrar('inicial');
  document.getElementById('voltar').onclick = () => mostrar('selecao');
  document.getElementById('voltar-selecao').onclick = () => mostrar('selecao');
  document.getElementById('abrir-resumo').onclick = () => atualizarResumo();

  function abrirControle(tipo) {
    tipoAtual = tipo;
    tipoTitulo.textContent = tipo === 'stella' ? 'Bulk Stella üç∫' : 'Bulk Spaten üç∫';
    contadorEl.textContent = totalPorTipo(tipo);
    mostrar('controle');
  }

  function horaAtual() {
    const h = new Date().getHours().toString().padStart(2, '0');
    return `${h}:00`;
  }

  function totalPorTipo(tipo) {
    return Object.values(contagens[tipo]).reduce((a, b) => a + b, 0);
  }

  function atualizarContador() {
    contadorEl.textContent = totalPorTipo(tipoAtual);
    localStorage.setItem('contagensBulkHora', JSON.stringify(contagens));
  }

  document.getElementById('add').onclick = () => {
    const hora = horaAtual();
    if (!contagens[tipoAtual][hora]) contagens[tipoAtual][hora] = 0;
    contagens[tipoAtual][hora] += 2;
    atualizarContador();
  };

  document.getElementById('remover').onclick = () => {
    const hora = horaAtual();
    if (!contagens[tipoAtual][hora]) contagens[tipoAtual][hora] = 0;
    contagens[tipoAtual][hora] = Math.max(0, contagens[tipoAtual][hora] - 2);
    atualizarContador();
  };

  function atualizarResumo() {
    resumoEl.innerHTML = '';
    let totalGeral = 0;
    for (const tipo of ['stella', 'spaten']) {
      const nome = tipo === 'stella' ? 'Bulk Stella üç∫' : 'Bulk Spaten üç∫';
      const horas = Object.keys(contagens[tipo]).sort();
      const totalTipo = totalPorTipo(tipo);
      totalGeral += totalTipo;

      const box = document.createElement('div');
      box.className = 'resumo-box';
      box.innerHTML = `<strong>${nome}</strong>`;

      if (horas.length === 0) {
        box.innerHTML += `<div class="resumo-linha"><em>Sem registros</em></div>`;
      } else {
        horas.forEach(h => {
          box.innerHTML += `<div class="resumo-linha"><span>${h}</span><span>${contagens[tipo][h]} bulks</span></div>`;
        });
        box.innerHTML += `<div class="resumo-linha"><strong>Total</strong><strong>${totalTipo}</strong></div>`;
      }

      resumoEl.appendChild(box);
    }
    resumoEl.innerHTML += `<div style="text-align:center;margin-top:10px;font-weight:bold;">TOTAL GERAL: ${totalGeral} bulks</div>`;
    mostrar('resumo');
  }

  document.getElementById('limpar-dados').onclick = () => {
    if (confirm('Tem certeza que deseja zerar todos os dados?')) {
      contagens = { stella: {}, spaten: {} };
      localStorage.removeItem('contagensBulkHora');
      atualizarResumo();
    }
  };

  document.getElementById('gerar-pdf').onclick = () => {
    const doc = new jsPDF();
    let y = 20;
    doc.setFontSize(18);
    doc.text('Relat√≥rio de Bulks - Ambev', 20, y);
    doc.setFontSize(12);
    y += 10;
    doc.text(`Operador: ${operador}`, 20, y += 8);
    doc.text(`Turno: ${turno}`, 20, y += 8);
    doc.text(`Data: ${new Date().toLocaleString()}`, 20, y += 8);
    y += 5;

    for (const tipo of ['stella', 'spaten']) {
      const nome = tipo === 'stella' ? 'Bulk Stella üç∫' : 'Bulk Spaten üç∫';
      doc.setFontSize(14);
      doc.text(nome, 20, y += 10);
      doc.setFontSize(11);
      const horas = Object.keys(contagens[tipo]).sort();
      if (horas.length === 0) {
        doc.text('Sem registros.', 25, y += 8);
      } else {
        horas.forEach(h => {
          doc.text(`${h} - ${contagens[tipo][h]} bulks`, 25, y += 8);
          if (y > 270) { doc.addPage(); y = 20; }
        });
        doc.text(`Total ${nome}: ${totalPorTipo(tipo)} bulks`, 25, y += 10);
      }
    }

    const totalGeral = totalPorTipo('stella') + totalPorTipo('spaten');
    doc.setFontSize(13);
    doc.text(`TOTAL GERAL: ${totalGeral} bulks`, 20, y += 10);

    doc.save(`Relatorio_Bulks_${operador}_${Date.now()}.pdf`);
  };
};
</script>
</body>
</html>
